{
  "version": 2,
  "builds": [
    {
      "src": "api/index.php",
      "use": "@vercel/php@0.6.0",
      "config": { "runtime": "php-8.x" }
    }
  ],
  "routes": [
    {
      "src": "/(.*)",
      "dest": "api/index.php"
    }
  ],
  "env": {
    "APP_ENV": "prod",
    "APP_SECRET": "@app_secret",
    "DATABASE_URL": "@database_url"
  }
}